{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "plugins": [
        "jest"
    ],
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "class-methods-use-this": "off",
        "arrow-parens": "off",
        "max-classes-per-file": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-cond-assign": "off",
        "no-continue": "off"
    }
}
